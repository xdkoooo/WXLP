<!--detail.wxml-->
<view class="container">
    <view class="topic-detail">
        <view class="topic-owner">
            <image class="owner-avatar" src="https:{{detail.member.avatar_normal}}" data-id="{{detail.member.id}}"         bindtap="showUserInfo"></image>
            <view class="topic-tit">{{detail.title}}</view>
        </view>
        <view class="topic-info">
            <text>{{detail.member.username}}</text>
            <text>{{detail.created}}</text>
        </view>

        <view class="topic-desc">
            <text>{{detail.content}}</text>
        </view>
    </view>

    <view class="replies">
        <block wx:for="{{replies}}" wx:key="id">
            <view class="replies-item" data-id="{{item.id}}">
                <view class="reply-owner">
                    <image class="reply-avatar" src="https:{{item.member.avatar_normal}}"></image>
                    <text class="reply-name">{{item.member.username}}</text>
                    <text class="reply-time">{{item.created}}</text>
                </view>
                <view class="reply-content">{{item.content}}</view>
            </view>
        </block>
    </view>

    <loading hidden="{{hidden}}">加载中...</loading>
</view>